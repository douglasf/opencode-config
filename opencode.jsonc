{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-haiku-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",
  "autoupdate": true,
  "plugin": ["@zenobius/opencode-background"],
  "lsp": {
    "kotlin": {
      "command": ["kotlin-lsp", "--stdio"],
      "extensions": [".kt", ".kts"]
    }
  },
  "agent": {
    "plan": {
      "model": "github-copilot/claude-haiku-4.5",
      "tools": {
        "read": true,
        "glob": true,
        "grep": true,
        "list": true
      }
    },
    "build": {
      "model": "github-copilot/claude-haiku-4.5",
      "prompt": "{file:./prompts/orchestrator.md}",
      "tools": {
        "bash": false,
        "read": true,
        "edit": false,
        "write": false,
        "grep": false,
        "glob": false,
        "task": true
      },
      "permission": {
        "bash": {
          "*": "deny",
          "git status*": "allow",
          "git log*": "allow",
          "git diff*": "allow"
        },
        "read": "allow",
        "task": {
          "*": "deny",
          "wolf": "allow",
          "git": "deny"
        }
      }
    }
  }
}
