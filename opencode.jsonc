{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "autoupdate": true,
  "instructions": ["./prompts/git-restrictions.md"],
  "mcp": {
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  },
  "tools": {
    "github*": false
  },
  "lsp": {
    "kotlin": {
      "command": ["kotlin-language-server"],
      "extensions": [".kt", ".kts"]
    }
  },
  "agent": {
    "plan": {
      "tools": {
        "read": true,
        "glob": true,
        "grep": true,
        "list": true
      }
    },
    "build": {
      "permission": {
        "bash": {
          "git commit*": "ask",
          "git push*": "ask",
          "gh pr create*": "ask",
          "gh pr merge*": "ask"
        }
      }
    },
    "github-helper": {
      "description": "Helper for GitHub operations - use when working with GitHub issues, PRs, or repositories",
      "mode": "subagent",
      "tools": {
        "github*": true
      }
    }
  }
}
