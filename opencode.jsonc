{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/kimi-k2.5-free",
  "small_model": "opencode/kimi-k2.5-free",
  "default_agent": "marsellus",
  "autoupdate": true,
  "plugin": ["opencode-pty", "cc-safety-net", "opencode-notify"],
  "lsp": {
    "kotlin": {
      "command": ["kotlin-lsp", "--stdio"],
      "extensions": [".kt", ".kts"]
    }
  },
  "agent": {
    "plan": {
      "model": "opencode/kimi-k2.5-free",
      "tools": {
        "read": true,
        "glob": true,
        "grep": true,
        "list": true
      }
    },
    "build": {
      "disable": true
    }
  }
}
