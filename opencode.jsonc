{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gpt-5.1-codex-mini",
  "small_model": "github-copilot/gpt-5.1-codex-mini",
  "default_agent": "marsellus",
  "autoupdate": true,
  "plugin": ["opencode-pty", "cc-safety-net", "opencode-notify"],
  "lsp": {
    "kotlin": {
      "command": ["kotlin-lsp", "--stdio"],
      "extensions": [".kt", ".kts"]
    }
  },
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    "wolf": {
      "permission": {
        "bash": {
          // Common utilities - always safe
          "sleep*": "allow"
        }
      }
    }
  }
}
