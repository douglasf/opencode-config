{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode@latest"],
  "model": "github-copilot/claude-opus-4.5",
  "small_model": "github-copilot/claude-haiku-4-5",
  "autoupdate": true,
  "instructions": [
    "./prompts/git-restrictions.md"
  ],
  "tools": {
    "github*": false
  },
  "lsp": {
    "kotlin": {
      "command": ["kotlin-lsp", "--stdio"],
      "extensions": [".kt", ".kts"]
    }
  },
  "agent": {
    "plan": {
      "tools": {
        "read": true,
        "glob": true,
        "grep": true,
        "list": true
      }
    },
    "build": {
      "permission": {
        "bash": {
          "git commit*": "ask",
          "git push*": "ask",
          "gh pr create*": "ask",
          "gh pr merge*": "ask"
        },
        "external_directory": {
          "/Users/douglasnils.frisk/.opencode/memory": "allow",
          "/Users/douglasnils.frisk/.opencode/memory/*": "allow"
        }
      }
    },
    "github-helper": {
      "description": "Helper for GitHub operations - use when working with GitHub issues, PRs, or repositories",
      "mode": "subagent",
      "tools": {
        "github*": true
      }
    }
  }
}
