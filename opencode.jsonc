{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-haiku-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",
  "default_agent": "marsellus",
  "autoupdate": true,
  "plugin": ["opencode-pty", "cc-safety-net", "opencode-notify"],
  "keybinds": {
    "leader": "ctrl+s"
  },
  "lsp": {
    "kotlin": {
      "command": ["kotlin-lsp", "--stdio"],
      "extensions": [".kt", ".kts"]
    }
  },
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    }
  }
}
